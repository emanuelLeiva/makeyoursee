<style>
  @keyframes slideIn {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .slide-in-text {
    display: inline-block;
    animation: slideIn 1s ease-in-out forwards;
  }
</style>
